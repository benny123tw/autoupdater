{
  "name": "autoupdater",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "repository": "https://github.com/benny123tw/autoupdater",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Benny123tw",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.benny.app",
    "productName": "Auto Updater",
    "copyright": "Copyright Â© 2012  ${author}",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      "./assets/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "installerLanguages": "zh_TW",
      "language": "1028",
      "license": "LICENSE.md",
      "artifactName": "${productName}_Setup_${version}.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "AutoUpdater"
    }
  }
}
